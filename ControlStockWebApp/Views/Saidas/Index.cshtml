@model IEnumerable<ControlStockWebApp.Models.Saida>

@{
    ViewData["Title"] = "Index";
}

<h1>Saidas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" >Realizar Saida</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cod_Saida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qtde_Saida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cod_Saida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qtde_Saida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.ClienteId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.ProdutoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SaidaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SaidaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SaidaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
