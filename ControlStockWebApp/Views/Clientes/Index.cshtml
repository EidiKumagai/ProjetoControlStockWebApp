@model IEnumerable<ControlStockWebApp.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<br />
<p>
    @*<input asp-action="Create" value="Adicionar Cliente" class="btn btn-primary" />*@
    
</p>
<div>
    <a asp-action="Create"  class="btn btn-primary"  >Adicionar Cliente</a>
</div>

<br />
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cod_Cliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RazaoSocial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CpforCnpj)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cod_Cliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RazaoSocial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CpforCnpj)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ClienteId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ClienteId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ClienteId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
